params {
    outdir = "output/"
    publish_dir_mode = "copy"
    enable_conda = false
}

profiles {
  conda {
    params.enable_conda = true
  }
  docker {
    docker.enabled = true
    docker.runOptions = '-u \$(id -u):\$(id -g)'
  }
  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
  }
  nibsc {
    process {
      executor = 'slurm'
      containerOptions = '-B /usr/share -B /home/AD'
    }
    singularity.enabled = true
  }
}

params {
  modules {
    'cnvkit' {
      args = ""
    }
  }
}
